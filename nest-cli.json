{
  "language": "ts",
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts"
          ],
          "classValidatorShim": false,
          "introspectComments": true
        }
      }
    ],
    "assets": [
      {
        "include": "languages/**/*",
        "outDir": "dist/",
        "watchAssets": true
      },
      {
        "include": "common/database/seeding/*.sql",
        "outDir": "dist/"
      }
    ],
    "deleteOutDir": true,
    "watchAssets": false
  }
}
